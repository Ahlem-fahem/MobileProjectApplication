<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="46dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/networkErrorImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_noun_no_wifi"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/networkErrorText"
            style="@style/BodyDefault"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/no_network_empty_state_subtitle"
            />
        <TextView
            android:id="@+id/networkRetryButton"
            style="@style/BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="16dp"
            android:text="@string/reload_page"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>